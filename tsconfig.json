{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      { "name": "next" },
      { "name": "typescript-plugin-css-modules" }
    ],
    "paths": {
      "@/*": ["./*"],
      "style/*": [ "./style/*" ]
    }
  },
  "include": ["next-env.d.ts", "./declaration.d.ts", "./typings.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/debug.ts"],
  "exclude": ["node_modules"]
}